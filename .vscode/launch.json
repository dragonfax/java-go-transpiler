{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch converter",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "./cmd/main.go",
            "args": ["../delverengine/Dungeoneer/src/com/interrupt/dungeoneer/"]
        },
        {
            "name": "Remote Golang Debug",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            // "remotePath": "The absolute path of the project root dir where the binary was built",
            "port": 40000,
            "host": "127.0.0.1",
            "apiVersion": 2
        }, 
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "../delverengine/Dungeoneer/src/com/interrupt/dungeoneer/Art.java",
            "grammar": "input/grammar/JavaParser.g4",
            "startRule": "compilationUnit",
            "printParseTree": true,
            "visualParseTree": true
        }
    ]
}